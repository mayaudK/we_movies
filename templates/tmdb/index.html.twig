{% extends 'base.html.twig' %}

{% block title %}Hello TmdbController!{% endblock %}

{% block body %}


    <div class="flex">
        <div>A propos de We Movies</div>
        <div>
            <input type="text" id="autocomplete" placeholder="Search for movies...">
            <div id="suggestions"></div>

            <script src="{{ asset('js/autocomplete.js') }}"></script>
        </div>
    </div>
    <div>
        <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ first_best_movie.video.key }}?si=bTpWukwStPLZ_Xrj" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
    </div>
    <div class="flex">
        <div>
            {% include 'tmdb/genreList.html.twig' %}
        </div>
        <div>
            {% include 'tmdb/movieList.html.twig' %}
        </div>
    </div>

{% endblock %}
